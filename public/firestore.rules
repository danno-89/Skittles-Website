rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Rules for existing collections
    match /league_tables/{document=**} { allow read: if true; allow write: if false; }
    match /players_public/{document=**} { allow read: if true; allow write: if false; }
    match /teams/{document=**} { allow read: if true; allow write: if false; }
    match /match_results/{document=**} { allow read: if true; allow write: if false; }
    match /competitions/{document=**} { allow read: if true; allow write: if false; }
    match /events/{document=**} { allow read: if true; allow write: if false; }

    // Correct rule for the top-level 'winners' collection
    match /winners/{document=**} {
      allow read: if true;
      allow write: if false;
    }
    
    // This collection contains sensitive data and should not be publicly readable.
    // Access to this data should be managed through secure backend environments
    // like Cloud Functions, which can enforce proper authentication and authorization.
    match /players_private/{document=**} {
      allow read, write: if false;
    }
  }
}
