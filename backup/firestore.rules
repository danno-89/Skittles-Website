rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Default rule: disallow all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // --- Public Collections ---
    match /committee/{doc=**} { allow read; }
    match /league_tables/{doc=**} { allow read; }
    match /fixtures/{doc=**} { allow read: if true; }
    match /events/{doc=**} { allow read: if true; }
    match /teams/{doc=**} { allow read: if true; }
    match /match_results/{doc=**} { allow read: if true; }
    match /competitions/{doc=**} { allow read: if true; }
    match /winners/{doc=**} { allow read: if true; }
    match /players_public/{doc=**} { allow read: if true; }
    match /seasons/{doc=**} { allow read: if true; }

    // --- Users Collection ---
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // --- Private Player Data Collection (Updated Read Rule) ---
    match /players_private/{playerId} {
      // A user can only read their OWN private document.
      allow read: if request.auth != null && resource.data.authId == request.auth.uid;

      // Allow a user to update a document ONLY to link their account.
      allow update: if request.auth != null &&
                       (!('authId' in resource.data) || resource.data.authId == null) &&
                       request.resource.data.authId == request.auth.uid &&
                       request.resource.data.address == resource.data.address &&
                       request.resource.data.consent == resource.data.consent &&
                       request.resource.data.homeNo == resource.data.homeNo &&
                       request.resource.data.mobileNo == resource.data.mobileNo &&
                       request.resource.data.dob == resource.data.dob &&
                       request.resource.data.email == resource.data.email;
    }
  }
}
